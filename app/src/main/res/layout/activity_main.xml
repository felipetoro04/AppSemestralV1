<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fondo1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/simpleListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/NameApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal"
            android:text="ISavedApp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:textStyle="bold"
            android:fontFamily="@font/nunito"/>

        <Button
            android:id="@+id/CallPolice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="54dp"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="54dp"
            android:layout_marginRight="54dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/button_circle_two"
            android:text="LLAMAR POLICÍA"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito"
            android:textSize="18dp"

            />

        <ImageButton
            android:id="@+id/Btn_Sound"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="170dp"
            android:layout_marginRight="260dp"
            android:background="@drawable/button_circle_two"
            android:src="@drawable/play"/>

        <Button
            android:id="@+id/Btn_Track"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="170dp"
            android:layout_marginRight="54dp"
            android:background="@drawable/button_circle_two"
            android:text="GUARDAR COORDENADA"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito"
            android:textStyle="bold"
            android:textSize="18dp"/>






        <Button
            android:id="@+id/HistoryTrack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="54dp"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="240dp"
            android:layout_marginEnd="54dp"
            android:layout_marginRight="54dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_circle_two"
            android:text="VER HISTORIAL DE UBICACIONES"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito"
            android:textSize="18dp"
            android:textStyle="bold"/>



        <ImageButton
            android:id="@+id/CallFamily"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="105dp"
            android:visibility="visible"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="360dp"
            android:layout_marginEnd="105dp"
            android:layout_marginRight="105dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/logo_call" />

       <!-- <Button
            android:id="@+id/LoginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="54dp"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="580dp"
            android:layout_marginEnd="54dp"
            android:layout_marginRight="54dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/button_circle_two"
            android:text="LOGIN"
            android:visibility="visible"
            android:textColor="@color/cardview_dark_background" />-->



        <Button
            android:id="@+id/CloseSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="54dp"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="580dp"
            android:layout_marginEnd="54dp"
            android:layout_marginRight="54dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/button_circle_two"
            android:text="CERRAR SESION"
            android:visibility="gone"
             />


        <Button
            android:id="@+id/RegisterButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="54dp"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="650dp"
            android:layout_marginEnd="54dp"
            android:layout_marginRight="54dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/button_circle_two"
            android:text="Datos de Emergencia"
            android:visibility="visible"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito"
            android:textStyle="bold"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/textView_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Email"
            android:textSize="30sp"
            android:layout_marginTop="500dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/TVcoordenadas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="54dp"
            android:layout_marginTop="300dp"
            android:layout_marginEnd="54dp"
            android:layout_marginBottom="16dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:text="Coordenadas"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coordenadas de la base de datos"
            android:layout_marginStart="54dp"
            android:layout_marginTop="320dp"
            android:layout_marginEnd="54dp"
            android:layout_marginBottom="16dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:visibility="gone"/>


    </RelativeLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>


