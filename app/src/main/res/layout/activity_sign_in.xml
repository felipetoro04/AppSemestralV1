<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".SignIn"
    android:background="@drawable/fondo1"


    >

    <TextView
        android:id="@+id/textViewTittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="0dp"
        android:gravity="center_horizontal"
        android:text="REGISTRO"
        android:textAlignment="center"

        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito"/>

    <TextView
        android:id="@+id/textViewNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="0dp"
        android:text="Nombre"

        android:textColor="@color/black"
        android:fontFamily="@font/nunito"

        />


    <EditText
        android:id="@+id/SignName"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="0dp"
        android:paddingLeft="10dp"
        android:paddingTop="4dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Pedrito Pisa Papeles"
        android:digits="ABCDEFGHIJKLMNÑO PQRSTUVWXYZabcdefghijklmnñopqrstuvwxyz"
        android:maxLength="100"
        android:fontFamily="@font/nunito"
        android:textColor="@color/black"
        android:background="@drawable/boton_sombra"
        android:gravity="left"
        android:textColorHint="@color/navy"

        />


    <TextView
        android:id="@+id/textViewRut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/nunito"
        android:text="Rut"
        android:textColor="@color/black"

        />
    <EditText
        android:id="@+id/SignRut"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="291dp"
        android:paddingLeft="10dp"
        android:paddingTop="4dp"
        android:ems="10"
        android:hint="12345678-k"
        android:inputType="text"
        android:digits="1234567890.-kK"
        android:maxLength="12"

        android:fontFamily="@font/nunito"
        android:textColor="@color/black"
        android:background="@drawable/boton_sombra"
        android:gravity="left"
        android:textColorHint="@color/navy"/>


    <TextView
        android:id="@+id/textViewTelefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="3dp"
        android:text="Teléfono"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito"
        />


    <EditText
        android:id="@+id/SignTelefono"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="291dp"
        android:ems="10"
        android:paddingLeft="10dp"
        android:paddingTop="4dp"
        android:hint="999999999"
        android:inputType="text"
        android:digits="1234567890"
        android:maxLength="9"
        android:background="@drawable/boton_sombra"
        android:gravity="left"
        android:textColorHint="@color/navy"
        android:fontFamily="@font/nunito"
        android:textColor="@color/black"/>



    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="3dp"
        android:text="Correo electrónico"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito"
        />

    <EditText
        android:id="@+id/SignEmail"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="32dp"
        android:paddingLeft="10dp"
        android:paddingTop="4dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="3dp"
        android:hint="usuario@isavedapp.com"
        android:background="@drawable/boton_sombra"
        android:gravity="left"
        android:textColorHint="@color/navy"
        android:fontFamily="@font/nunito"
        android:textColor="@color/black"
        />


    <TextView
        android:id="@+id/textViewContactEmergency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="3dp"
        android:text="Contacto de emergencia"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito"
        />
    <EditText
        android:id="@+id/SignContactEmergency"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:paddingLeft="10dp"
        android:paddingTop="4dp"
        android:layout_marginBottom="416dp"
        android:ems="10"
        android:hint="Juanito Mendoza"
        android:digits="ABCDEF GHIJKLMNÑOPQRSTUVWXYZabcdefghijklmnñopqrstuvwxyz"
        android:maxLength="100"
        android:background="@drawable/boton_sombra"
        android:gravity="left"
        android:textColorHint="@color/navy"
        android:fontFamily="@font/nunito"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/textViewFonoContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="3dp"
        android:text="Teléfono de contacto"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito"
        />

    <EditText
        android:id="@+id/SignFonoContact"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="416dp"
        android:ems="10"
        android:hint="999999999"
        android:digits="1234567890"
        android:paddingLeft="10dp"
        android:paddingTop="4dp"
        android:maxLength="9"
        android:background="@drawable/boton_sombra"
        android:gravity="left"
        android:textColorHint="@color/navy"
        android:fontFamily="@font/nunito"
        android:textColor="@color/black"/>
    />

    <TextView
        android:id="@+id/textViewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="560dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="3dp"
        android:text="Contraseña"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito"

        />


    <EditText
        android:id="@+id/SignPass"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="580dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="291dp"
        android:paddingLeft="10dp"
        android:ems="10"
        android:hint="***********"
        android:paddingTop="4dp"
        android:inputType="textPassword"
        android:digits="ABCD EFGHIJKLMNÑOPQRSTUVWXYZabcdefghijklmnñopqrstuvwxyz1234567890@/_-"
        android:maxLength="100"
        android:background="@drawable/boton_sombra"
        android:gravity="left"
        android:textColorHint="@color/navy"
        android:fontFamily="@font/nunito"
        android:textColor="@color/black"
        />

    <Button
        android:id="@+id/SaveButton"
        android:layout_width="193dp"
        android:layout_height="60dp"
        android:layout_marginTop="640dp"
        android:layout_marginLeft="50px"
        android:textStyle="bold"
        android:text="GUARDAR"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito"
        android:background="@drawable/button_circle_two"
        android:layout_centerHorizontal="true"/>


    <!--<Button
        android:id="@+id/CancelSignButton"
        android:layout_width="193dp"
        android:layout_height="40dp"
        android:layout_marginTop="640dp"
        android:gravity="center_horizontal"

        android:text="CANCELAR"
        android:background="@drawable/button_circle_two"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito"/>-->


</RelativeLayout>